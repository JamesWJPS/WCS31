# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=sqlite:./data/cms.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=web_communication_cms
DATABASE_USER=cms_user
DATABASE_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_APP_NAME=Web Communication CMS
VITE_APP_VERSION=1.0.0

# Production Overrides (set these in production)
# NODE_ENV=production
# DATABASE_URL=postgresql://user:password@host:port/database
# JWT_SECRET=production_jwt_secret
# CORS_ORIGIN=https://your-domain.com
# VITE_API_BASE_URL=https://api.your-domain.com/api